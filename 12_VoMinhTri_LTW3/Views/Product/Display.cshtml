@model _12_VoMinhTri_LTW3.Models.Product

<h2>Chi Tiết Sản Phẩm</h2>
<h3 class="product-name">@Model.Name</h3>
<hr>

<div class="row">
    <div class="col-md-4 d-flex flex-column align-items-center">
        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-width: 100%;" />

        <div class="mt-3">
            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary me-2">Chỉnh Sửa</a>
            <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
        </div>
    </div>

    <div class="col-md-8">
        <table class="table">
            <tr>
                <th>Giá:</th>
                <td>@Model.Price.ToString("N0")đ</td>
            </tr>
            <tr>
                <th>Mô tả:</th>
                <td>@Model.Description</td>
            </tr>
            <tr>
                <th>Loại:</th>
                <td>@(Model.Category?.Name ?? "Không có loại")</td>
            </tr>
        </table>
    </div>
</div>